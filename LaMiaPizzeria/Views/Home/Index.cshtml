@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" >
</head>
<body>

    
    <header>
        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1">La Mia Pizzeria</span>
            </div>
        </nav>

    </header>


    <main>
        <div class="container mt-5 text-light">
            <div class="row">
                <div class="col-12">
                    <h3>Le Mie Pizze</h3>
                </div>
            </div>
            <div class="row my-3">
                <div class="col-12">

                    <table class="table table-striped text-light">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">IMMAGINE</th>
                                <th scope="col">NOME</th>
                                <th scope="col">DESCRIZIONE</th>
                                <th scope="col">PREZZO</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row" class="text-light">1</th>
                                <td><img class="img-fluid img_square" width="150px" height="150px" src="https://vitaitaliantours.com/wp-content/uploads/2016/03/Neapolitan-Pizza-Margherita.jpg" alt="Margherita"></td>
                                <td class="text-light">Margherita</td>
                                <td class="text-light">
                                    La pizza Margherita è la tipica pizza napoletana, condita con pomodoro, mozzarella, basilico fresco, sale e olio; è la più popolare pizza italiana.
                                    Rappresenta sicuramente il simbolo per antonomasia del patrimonio culturale e culinario italiano, diffusa per la sua fama in tutto il mondo.
                                </td>
                                <td class="text-light">&euro; 3,50</td>
                            </tr>

                            <tr>
                                <th scope="row" class="text-light">2</th>
                                <td><img class="img-fluid img_square" width="150px" height="200px" src="https://www.silviocicchi.com/pizzachef/wp-content/uploads/2015/03/d2-300x200.jpg" alt="Diavola"></td>
                                <td class="text-light">Diavola</td>
                                <td class="text-light">
                                    Pomodoro San Marzano DOP, ombra di pomodoro del Piennolo arrostito, Fior di latte molisano, cubetti di salamella croccante, fili di peperoncino, olio evo e basilico
                                </td>
                                <td class="text-light">&euro; 5,00</td>
                            </tr>

                            <tr>
                                <th scope="row" class="text-light">3</th>
                                <td><img class="img-fluid img_square" width="150px" height="200px" src="https://www.basilicoepepe.it/wp-content/uploads/2022/10/Primavera124-1536x1022.jpg" alt="primavera"></td>
                                <td class="text-light">Primavera</td>
                                <td class="text-light">
                                    Fior di latte molisano, rucola, pomodoro datterino (a crudo), prosciutto crudo, scaglie di Grana Padano DOP 24mesi e olio evo.
                                </td>
                                <td class="text-light">&euro; 6,50</td>
                            </tr>



                      </tbody>     
                    </table>

                </div>
            </div>
        </div>


    </main>


    <footer>

    </footer>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>
